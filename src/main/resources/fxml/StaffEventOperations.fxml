<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.eventra.controller.StaffEventOperationsController"
      alignment="CENTER" spacing="20"
      stylesheets="@../css/styles.css"
      styleClass="dashboard-container">

    <!-- Header -->
    <VBox alignment="CENTER" spacing="10" styleClass="dashboard-header">
        <Text fx:id="titleText" text="Event Operations" styleClass="dashboard-title"/>
        <Text text="Staff Dashboard" styleClass="dashboard-subtitle"/>
    </VBox>

    <!-- Content -->
    <VBox alignment="CENTER" spacing="15" styleClass="dashboard-content">
        
        <Text text="Event Operations Center" styleClass="dashboard-text"/>
        
        <!-- Placeholder Content -->
        <VBox spacing="10" styleClass="user-info">
            <Text text="This is the Event Operations page for Staff" styleClass="info-title"/>
            <Text text="Here you can manage event day operations" styleClass="info-text"/>
            <Text text="Features: Check-in, Event Monitoring, and On-site Management" styleClass="info-text"/>
        </VBox>

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="15">
            <Button text="Start Check-in"
                    onAction="#handleStartCheckin"
                    styleClass="primary-button"/>
            
            <Button text="Back to Dashboard"
                    onAction="#handleBackToDashboard"
                    styleClass="secondary-button"/>
        </HBox>
    </VBox>

</VBox> 