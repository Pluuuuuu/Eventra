<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.eventra.controller.SuperAdminSystemSettingsController"
      alignment="CENTER" spacing="20"
      stylesheets="@../css/styles.css"
      styleClass="dashboard-container">

    <!-- Header -->
    <VBox alignment="CENTER" spacing="10" styleClass="dashboard-header">
        <Text fx:id="titleText" text="System Settings" styleClass="dashboard-title"/>
        <Text text="Super Administrator Dashboard" styleClass="dashboard-subtitle"/>
    </VBox>

    <!-- Content -->
    <VBox alignment="CENTER" spacing="15" styleClass="dashboard-content">
        
        <Text text="System Configuration" styleClass="dashboard-text"/>
        
        <!-- Placeholder Content -->
        <VBox spacing="10" styleClass="user-info">
            <Text text="This is the System Settings page for Super Administrators" styleClass="info-title"/>
            <Text text="Here you can configure system-wide settings" styleClass="info-text"/>
            <Text text="Features: Database, Security, Email, and Application Settings" styleClass="info-text"/>
        </VBox>

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="15">
            <Button text="Database Settings"
                    onAction="#handleDatabaseSettings"
                    styleClass="primary-button"/>
            
            <Button text="Back to Dashboard"
                    onAction="#handleBackToDashboard"
                    styleClass="secondary-button"/>
        </HBox>
    </VBox>

</VBox> 