<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.eventra.controller.WelcomeController"
      alignment="CENTER" spacing="30"
      stylesheets="@../css/styles.css">

    <ImageView fx:id="logoView"
               fitWidth="300"
               preserveRatio="true"
               pickOnBounds="true" />

    <Button text="Welcome"
            fx:id="welcomeBtn"
            onAction="#onWelcome"
            style="-fx-font-size: 16px; -fx-background-color: #5C4DAA; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;" />
</VBox>
