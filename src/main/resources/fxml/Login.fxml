<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.eventra.controller.LoginController"
      stylesheets="@../css/styles.css"
      styleClass="login-page-container">

    <!-- Left Section - Branding -->
    <VBox styleClass="branding-section" HBox.hgrow="ALWAYS">
        <VBox styleClass="branding-content" alignment="TOP_LEFT" spacing="20">
            <!-- Logo and Brand -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <ImageView fx:id="logoImage" styleClass="logo-image" fitHeight="60" fitWidth="60" preserveRatio="true"/>
                <VBox spacing="5">
                    <Text text="Welcome to" styleClass="branding-subtitle"/>
                    <Text text="Eventra" styleClass="branding-title"/>
                </VBox>
            </HBox>
            
            <!-- Tagline -->
            <Text text="Your unified platform for seamless event management and engagement. Connect, plan, and experience." 
                  styleClass="branding-tagline" 
                  wrappingWidth="400"/>
        </VBox>
    </VBox>

    <!-- Right Section - Sign In Form -->
    <VBox styleClass="form-section" HBox.hgrow="ALWAYS" alignment="CENTER">
        <VBox styleClass="signin-card" spacing="25" alignment="CENTER">
            <!-- Form Header -->
            <VBox spacing="8" alignment="CENTER">
                <Text text="Sign In" styleClass="signin-title"/>
                <Text text="Welcome back! Please enter your credentials to access your account." 
                      styleClass="signin-subtitle"/>
            </VBox>

            <!-- Login Form -->
            <VBox spacing="20" styleClass="signin-form">
                
                <!-- Email Field -->
                <VBox spacing="8" styleClass="form-field">
                    <Label text="Email" styleClass="form-label"/>
                    <TextField fx:id="emailField" 
                              promptText="your.email@example.com"
                              styleClass="form-input"/>
                </VBox>

                <!-- Password Field -->
                <VBox spacing="8" styleClass="form-field">
                    <Label text="Password" styleClass="form-label"/>
                    <PasswordField fx:id="passwordField" 
                                  promptText="********"
                                  styleClass="form-input"/>
                </VBox>

                <!-- Error Message -->
                <Label fx:id="errorLabel" 
                       styleClass="error-message"
                       visible="false"
                       managed="false"/>

                <!-- Sign In Button -->
                <Button fx:id="signInButton"
                        text="Sign In"
                        onAction="#handleSignIn"
                        styleClass="signin-button"/>

                <!-- Sign Up Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Text text="Don't have an account? " styleClass="signup-text"/>
                    <Hyperlink fx:id="signUpLink"
                               text="Sign Up"
                               onAction="#handleSignUp"
                               styleClass="signup-link"
                               style="-fx-cursor: hand;"/>
                </HBox>
            </VBox>
        </VBox>
    </VBox>

</HBox>
