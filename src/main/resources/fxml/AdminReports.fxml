<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.eventra.controller.AdminReportsController"
      alignment="CENTER" spacing="20"
      stylesheets="@../css/styles.css"
      styleClass="dashboard-container">

    <!-- Header -->
    <VBox alignment="CENTER" spacing="10" styleClass="dashboard-header">
        <Text fx:id="titleText" text="Reports &amp; Analytics" styleClass="dashboard-title"/>
        <Text text="Administrator Dashboard" styleClass="dashboard-subtitle"/>
    </VBox>

    <!-- Content -->
    <VBox alignment="CENTER" spacing="15" styleClass="dashboard-content">
        
        <Text text="Reporting System" styleClass="dashboard-text"/>
        
        <!-- Placeholder Content -->
        <VBox spacing="10" styleClass="user-info">
            <Text text="This is the Reports page for Administrators" styleClass="info-title"/>
            <Text text="Here you can view system analytics and reports" styleClass="info-text"/>
            <Text text="Features: Event Reports, User Analytics, and System Statistics" styleClass="info-text"/>
        </VBox>

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="15">
            <Button text="Generate Report"
                    onAction="#handleGenerateReport"
                    styleClass="primary-button"/>
            
            <Button text="Back to Dashboard"
                    onAction="#handleBackToDashboard"
                    styleClass="secondary-button"/>
        </HBox>
    </VBox>

</VBox> 