<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.eventra.controller.MyScheduleController"
            stylesheets="@../css/styles.css"
            styleClass="main-container">

    <!-- Header -->
    <top>
        <HBox styleClass="header" alignment="CENTER_LEFT" spacing="20">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            
            <!-- Logo -->
            <Text text="Eventra" styleClass="logo-text" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            
            <!-- Navigation -->
            <HBox spacing="30" alignment="CENTER_LEFT">
                <Button text="My Schedule" styleClass="nav-button" onAction="#handleMySchedule"/>
                <Button text="Browse Events" styleClass="nav-button" onAction="#handleBrowseEvents"/>
            </HBox>
            
            <!-- Search Bar -->
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <TextField fx:id="searchField" promptText="Search events..." styleClass="search-field"/>
                <Button text="🔍" styleClass="search-button" onAction="#handleSearch"/>
            </HBox>
            
            <!-- Profile Icon -->
            <Button fx:id="profileButton" text="👤" styleClass="profile-button" onAction="#handleProfile"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox styleClass="schedule-container" spacing="20">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            
            <!-- Page Title -->
            <VBox spacing="10">
                <Text text="My Schedule" styleClass="page-title" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>
                <Text text="Events you've registered for" styleClass="page-subtitle" style="-fx-font-size: 16px; -fx-fill: #666;"/>
            </VBox>
            
            <!-- Registered Events -->
            <VBox spacing="20">
                <Text text="Upcoming Events" styleClass="section-title" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <VBox fx:id="registeredEventsContainer" spacing="15" styleClass="events-list"/>
            </VBox>
            
            <!-- Past Events -->
            <VBox spacing="20">
                <Text text="Past Events" styleClass="section-title" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <VBox fx:id="pastEventsContainer" spacing="15" styleClass="events-list"/>
            </VBox>
        </VBox>
    </center>

</BorderPane> 