<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import java.time.format.DateTimeFormatter?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.eventra.controller.AttendeeProfileController"
            stylesheets="@../css/styles.css"
            styleClass="main-container">

    <!-- Header -->
    <top>
        <HBox styleClass="header" alignment="CENTER_LEFT" spacing="20">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            
            <!-- Logo -->
            <ImageView fx:id="logoImage" fitHeight="40" fitWidth="120" 
                      preserveRatio="true"/>
            
            <!-- Navigation -->
            <HBox spacing="30" alignment="CENTER_LEFT">
                <Button text="My Schedule" styleClass="attendee-nav-button" onAction="#handleMySchedule"/>
                <Button text="Browse Events" styleClass="attendee-nav-button" onAction="#handleBrowseEvents"/>
            </HBox>
            
            <!-- Search Bar -->
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <TextField fx:id="searchField" promptText="Search events..." styleClass="search-field"/>
                <Button text="ðŸ”" styleClass="search-button" onAction="#handleSearch"/>
            </HBox>
            
            <!-- Profile Icon -->
            <Button fx:id="profileButton" text="ðŸ‘¤" styleClass="profile-button" onAction="#handleProfile"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox styleClass="profile-container" spacing="40" alignment="TOP_CENTER">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            
            <!-- Profile Header -->
            <VBox spacing="20" alignment="CENTER">
                <ImageView fx:id="profileImage" fitHeight="120" fitWidth="120" 
                          styleClass="profile-avatar"/>
                <Text fx:id="profileName" text="John Doe" styleClass="profile-name"/>
                <Text fx:id="profileEmail" text="john.doe@example.com" styleClass="profile-email"/>
            </VBox>
            
            <!-- Profile Form -->
            <VBox styleClass="profile-form" spacing="25" maxWidth="500">
                
                <!-- Username Section -->
                <VBox spacing="8">
                    <Text text="Username" styleClass="form-label"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <TextField fx:id="usernameField" styleClass="form-field" HBox.hgrow="ALWAYS"/>
                        <Button text="Edit" styleClass="edit-button" onAction="#handleEditUsername"/>
                    </HBox>
                </VBox>
                
                <!-- Email Section -->
                <VBox spacing="8">
                    <Text text="Email" styleClass="form-label"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <TextField fx:id="emailField" styleClass="form-field" HBox.hgrow="ALWAYS"/>
                        <Button text="Edit" styleClass="edit-button" onAction="#handleEditEmail"/>
                    </HBox>
                </VBox>
                
                <!-- Save Changes Button -->
                <Button fx:id="saveButton" text="Save Changes" styleClass="primary-button" 
                        onAction="#handleSaveChanges" disable="true"/>
                
                <!-- Cancel Button -->
                <Button text="Cancel" styleClass="secondary-button" onAction="#handleCancel"/>
            </VBox>
            
            <!-- Additional Profile Info -->
            <VBox styleClass="profile-info" spacing="15" maxWidth="500">
                <Text text="Account Information" styleClass="section-title"/>
                
                <HBox spacing="20">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Text text="Member Since" styleClass="info-label"/>
                        <Text fx:id="memberSinceText" text="January 2024" styleClass="info-value"/>
                    </VBox>
                    
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Text text="Events Attended" styleClass="info-label"/>
                        <Text fx:id="eventsAttendedText" text="5" styleClass="info-value"/>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </center>

</BorderPane> 