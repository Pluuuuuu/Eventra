<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.eventra.controller.SignUpController"
      alignment="CENTER" spacing="60"
      stylesheets="@../css/styles.css"
      styleClass="signup-page-container">

    <!-- Left Side - Logo Only -->
    <VBox alignment="CENTER" styleClass="logo-section">
        <ImageView fx:id="logoImageView" fitHeight="300" fitWidth="300" preserveRatio="true">
            <image>
                <Image url="@../images/logo.png.png"/>
            </image>
        </ImageView>
    </VBox>

    <!-- Right Side - Form Card -->
    <VBox alignment="CENTER" spacing="25" styleClass="signup-card" maxWidth="400" prefWidth="400">
        
        <!-- Header -->
        <VBox alignment="CENTER" spacing="5">
            <Text text="Create Your Account" styleClass="signup-main-title"/>
        </VBox>

        <!-- Form Fields -->
        <VBox spacing="20" styleClass="signup-form-container">
            
            <!-- First Name and Middle Name Row -->
            <HBox spacing="15">
                <VBox spacing="8" HBox.hgrow="ALWAYS">
                    <Label text="First Name" styleClass="field-label"/>
                    <TextField fx:id="firstNameField" 
                              promptText="John"
                              styleClass="modern-input"/>
                </VBox>
                <VBox spacing="8" HBox.hgrow="ALWAYS">
                    <Label text="Middle Name" styleClass="field-label"/>
                    <TextField fx:id="middleNameField" 
                              promptText="Mark"
                              styleClass="modern-input"/>
                </VBox>
            </HBox>

            <!-- Last Name -->
            <VBox spacing="8">
                <Label text="Last Name" styleClass="field-label"/>
                <TextField fx:id="lastNameField" 
                          promptText="Doe"
                          styleClass="modern-input"/>
            </VBox>

            <!-- Email -->
            <VBox spacing="8">
                <Label text="Email" styleClass="field-label"/>
                <TextField fx:id="emailField" 
                          promptText="john.doe@example.com"
                          styleClass="modern-input"/>
            </VBox>

            <!-- Password and Confirm Password Row -->
            <HBox spacing="15">
                <VBox spacing="8" HBox.hgrow="ALWAYS">
                    <Label text="Password" styleClass="field-label"/>
                    <PasswordField fx:id="passwordField" 
                                  promptText="Enter your password"
                                  styleClass="modern-input"/>
                </VBox>
                <VBox spacing="8" HBox.hgrow="ALWAYS">
                    <Label text="Confirm Password" styleClass="field-label"/>
                    <PasswordField fx:id="confirmPasswordField" 
                                  promptText="Confirm your password"
                                  styleClass="modern-input"/>
                </VBox>
            </HBox>

            <!-- Organization -->
            <VBox spacing="8">
                <Label text="Organization" styleClass="field-label"/>
                <TextField fx:id="organizationField" 
                          promptText="Select your organization"
                          styleClass="modern-input"/>
            </VBox>

            <!-- Error Message -->
            <Label fx:id="errorLabel" 
                   styleClass="error-message"
                   visible="false"
                   managed="false"/>

            <!-- Create Account Button -->
            <Button fx:id="signUpButton"
                    text="Create Account"
                    onAction="#handleSignUp"
                    styleClass="create-account-button"/>

            <!-- Sign In Link -->
            <HBox alignment="CENTER" spacing="5">
                <Text text="Already have an account? " styleClass="link-text"/>
                <Hyperlink fx:id="signInLink"
                           text="Sign In"
                           onAction="#handleSignIn"
                           styleClass="sign-in-link"/>
            </HBox>
        </VBox>
    </VBox>
</HBox> 